{
  "name": "electron-haidesen",
  "version": "1.0.0",
  "description": "",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev --prefix frontend\" \"npm run electron\"",
    "electron": "cross-env NODE_ENV=development electron .",
    "electron:dev": "npm run rebuild && cross-env NODE_ENV=development electron .",
    "build": "npm run build --prefix frontend && cross-env NODE_ENV=production electron-builder",
    "build:win": "cross-env NODE_ENV=production electron-builder --win --publish never",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rm -rf node_modules dist && npm install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "28.3.3",
    "electron-builder": "25.1.8"
  },
  "dependencies": {
    "axios": "^1.12.1",
    "better-sqlite3": "^12.2.0",
    "puppeteer": "^24.20.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2"
  },
  "build": {
    "appId": "com.haidesen.app",
    "productName": "haidesen",
    "mac": {
        "icon": "build/icon.icns",
        "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
        "icon": "build/icon.icns",
        "target": "nsis"
      },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "package.json",
      "!electron/myProfile",
      "!node_modules/*/{test,__tests__,tests}/",
      "!electron/node_modules/*/{test,__tests__,tests}/",
      "!**/*.map",       
      "!**/*.log",       
      "!**/*.md",       
      "!.gitignore",
      "!.editorconfig",
      "!.vscode",
      "!.idea",
      "!*.yml",
      "!*.yaml"
    ],
    "asar": true,
    "directories": {
      "buildResources": "assets",
      "output": "release"
    }
  }
}
